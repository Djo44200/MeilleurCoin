<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MeilleurCoin{% endblock %}</title>
        {% block stylesheets %}
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Le Meilleur Coin</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('form_deposerAnnonce') }}">Déposer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('recherche') }}">Rechercher</a>
                    </li>

                    {% if app.user is null %}

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    {% endif %}



                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mesAnnonces') }}">Mes annonces</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('favori') }}">Mes favoris</a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% endif %}

                        <li class="nav-item ">
                        <a class="nav-link disabled " href="#">Bonjour {{ app.user.pseudo }} !</a>
                    </li>
                        {% endif %}

                </ul>
            </div>
        </nav>
    </head>
    <body>
    {% for label, messages in app.flashes %}


        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}



    <br><br><br>
        <footer class="page-footer font-small blue fixed-bottom" >
            <div class="container">

                <!-- Call to action -->
                <ul class="list-unstyled list-inline text-center py-2">
                    <li class="list-inline-item">
                        <a href="{{ path('CGU') }}" class="btn btn-outline-white btn-rounded">CGU</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="{{ path('FAQ') }}" class="btn btn-outline-white btn-rounded">FAQ</a>
                    </li>
                </ul>
                <!-- Call to action -->

            </div>

            <!-- Copyright -->
            <div class="footer-copyright text-center py-3 ">© 2019 Copyright:
                <a href="{{ path('home') }}"> MeilleurCoin.com</a>
            </div>
            <!-- Copyright -->

        </footer>
        {{ encore_entry_script_tags('app') }}


    </body>

    <!-- Footer -->


    <!-- Footer -->
</html>
